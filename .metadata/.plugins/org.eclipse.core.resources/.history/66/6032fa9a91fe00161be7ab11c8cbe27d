	    var obj1 = {user_id:21};  
		var myJSON1 = JSON.stringify(obj);

  	       	$.ajax({ 
  	                   url: "http://localhost:8080/fbapp3/webapi/status/fetch",
  	                   type: "GET",
  	                   data: "myJSON1"
  	                   dataType: "json",
  	                   contentType : "application/json",
  	                   crossDomain: true,
  	                   processData: true,
  	                   
  	                   
  	                   success: function(response){  
  	                	   
  	                       // we have the response  
  	                	   if(response!=null){
  	                       var data =JSON.parse(JSON.stringify(response));  ;
  	                	   var output= "<ul class="+"list-group"+">";

  	                	   for (i=0; i < data.length; i++){
  	                	       output += "<li class="+"list-group-item"+">"+ data[i].status_desc+ "</li>";
  	                	       
  	                	   }

  	                	   output += "</ul>";
  	                	   $("#output").html(output);
  	               
  	                       }  
  	                       
  	                       else
  	                    	   {

  	                    	   window.location.href = "useer.html";
  	                    	   }
  	                     },
  	    	    
  	          			error: function(e){  
